#!/usr/bin/env node

const path = require('path')
const project = path.join(__dirname, '..')

// 尝试使用相对路径加载模块
try {
  const oclif = require(path.join(project, 'node_modules', '@oclif/core'))
  oclif.run().then(
    require(path.join(project, 'node_modules', '@oclif/core/flush'))
  ).catch(
    require(path.join(project, 'node_modules', '@oclif/core/handle'))
  )
} catch (error) {
  console.error('Error loading @oclif/core:', error.message)
  console.error('Please run: cd scripts/ddn-scripts && npm install')
  process.exit(1)
}
